<!DOCTYPE html>
<html>
  <head>
    <title>SMARTSTAY CHUKA</title>
    <script>
      // Handle client-side routing for React Router
      var segments = location.pathname.split('/').filter(Boolean);
      
      // List of valid routes
      var validRoutes = ['login', 'register', 'payment', 'admin'];
      
      if (segments.length > 0) {
        var firstSegment = segments[0];
        
        // If it's not a valid route and not a static asset, redirect to root
        if (!validRoutes.includes(firstSegment) && !firstSegment.includes('.')) {
          window.location.href = '/';
        }
      }
    </script>
  </head>
  <body>
    <div id="root"></div>
    <script src="/static/js/main.01f13a25.js"></script>
  </body>
</html>
